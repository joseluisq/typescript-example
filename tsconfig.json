{
  "compileOnSave": false,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/*.spec.ts",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ]
  }
}
